{
  "compilerOptions": {
    "target": "ES2022",
    "module": "Preserve",
    
    "isolatedModules": true,
    "verbatimModuleSyntax": true,

    "noEmit": true,
    
    "useDefineForClassFields": true,
    "esModuleInterop": true,

    "skipLibCheck": true,
    "strict": true,
    "noUncheckedIndexedAccess": true
  }
}
